echo "🔍 Running pre-commit checks..."

# Run type check
echo "📋 Type checking..."
npm run check || exit 1

# Run formatter
echo "🧹 Formatting..."
npm run format || exit 1

# Run tests
echo "🧪 Running tests..."
npm run test:run || exit 1

# Stage changed files
git add .

echo "✅ All pre-commit checks passed!"
